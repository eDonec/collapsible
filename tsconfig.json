{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "allowJs": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "build",
    "rootDir": "src",
    "strict": true,
    "jsx": "react",
    "noUnusedLocals": false,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": "src",
    "paths": {
      "_redux/*": ["_redux/*"],
      "helpers/*": ["helpers/*"],
      "components/*": ["components/*"],
      "containers/*": ["containers/*"],
      "pages/*": ["pages/*"],
      "types/*": ["types/*"],
      "context/*": ["context/*"],
      "constant/*": ["constant/*"]
    },
    "moduleResolution": "node",
    "skipLibCheck": true,
    "noImplicitReturns": true,
    "forceConsistentCasingInFileNames": true
  },
  "compileOnSave": true,
  "exclude": ["node_modules"],
  "include": ["./src/**/*"]
}
